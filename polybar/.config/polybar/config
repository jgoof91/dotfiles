foreground = ${colors.fg}

module-margin-left = 1
module-margin-right = 1
modules-left = bspwm
modules-center = xwindow
modules-right = spotify mail package vol bat date
wm-restack = bspwm


[module/date]
type = internal/date
interval = 1.0
date = %m-%d-%Y
time = %I:%M%p
label = %time% %date%
label-foreground = ${colors.fg}

[module/xwindow]
type = internal/xwindow
format-background = ${colors.bg}
format-foreground = ${colors.fg}
label = %title:0:45:...%

[module/bspwm]
type = internal/bspwm
#format = <label-state>

label-focused = %index%
label-focused-background = ${colors.bg}
label-focused-foreground = ${colors.fg}
label-focused-underline =  ${colors.red}
label-focused-padding = 1

label-occupied = %index%
label-occupied-background = ${colors.bg1}
label-occupied-foreground = ${colors.green}
label-occupied-padding = 1

label-urgent = %index%
label-urgent-background = ${colors.bg}
label-urgent-foreground = ${colors.red}
label-urgent-padding = 1

label-empty = %index%
label-empty-foreground = ${colors.green}
label-empty-padding = 1

label-separator = |
label-separator-padding = 0.5
label-separator-foreground = ${colors.fg}


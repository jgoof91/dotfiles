[module/spotify]
type = custom/script
exec = poly-spotifyd
exec-if = pgrep -x spotifyd
tail = true
click-left = poly-spotifyd left
click-right = poly-spotifyd right

[module/package]
type = custom/script
exec = poly-package
click-left = poly-package left
click-middle = poly-package middle
click-right = poly-package right

[module/mail]

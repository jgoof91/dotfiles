[bar/default]
enable-ipc = true
width = 100%
height = 34

font-0 = Monospace:size=24

padding-left = 0
padding-right = 0

module-margin-left = 1
module-margin-right = 1
modules-left = bspwm xwindow
modules-center =
modules-right = vol date
wm-restack = bspwm

[module/date]
type = internal/date
interval = 1.0
date = %m-%d-%Y
time = %I:%M%p
label = %time% %date%

[module/xwindow]
type = internal/xwindow
label = %title:0:45:...%

[module/bspwm]
type = internal/bspwm
label-focused = %index%
label-focused-padding = 1

label-occipied = %index%
label-occipied-padding = 1

label-urgent = %index%
label-urgent-padding = 1

label-empty = %index%
label-empty-padding = 1

[module/vol]
type = custom/ipc
hook-0 = poly-volume
initial = 1
label = %output%

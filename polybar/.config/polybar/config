[module/bat]
type = internal/battery
battery = BAT0
adapter = ADP1
full-at = 99

label-full =  100%
label-full-foreground = ${colors.green}

ramp-capacity-0 = 
ramp-capacity-1 = 
ramp-capacity-2 = 
ramp-capacity-3 = 
ramp-capacity-4 = 


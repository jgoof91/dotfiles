[wal]
background = ${colors.bg}
foreground = ${colors.fg}
foreground-alt = ${colors.fg3}
primary = ${colors.yellow}
secondary = ${colors.green}
alert = ${colors.red}

[bar/default]
enable-ipc = true
width = 100%
height = 20

font-0 = "Fira Code Nerd Font:size=10"

padding-left = 0
padding-right = 0
separator = |
separator-foregound = ${colors.orange}


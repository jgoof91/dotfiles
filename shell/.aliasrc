alias ls='ls --color=auto'
alias ll='ls -alF'
alias la='ls -A'
alias l='ls -CF'
alias t="tmux"
alias ta="tmux attach"
alias td="tmux detach"
alias tk="tmux kill-pane"
alias ping="ping -c 5"
alias upgrade="[ $EUID -eq '0' ] || echo 'superuser powers need' && sudo apt-get update && sudo apt-get upgrade && sudo apt-get autoremove"
alias search="apt-cache search"
alias push="${HOME}/mover push"
alias pull="${HOME}/mover pull"
alias rule="sudo nft list ruleset"
alias failed='grep -hi 'invalid' /var/log/auth.log'
alias dps='docker ps'

#open config files
alias reload-shell="source .profile; source .bashrc"

#git
alias gc="git add . && git commit -m "
alias config="git --git-dir=${HOME}/.dotfiles/"

for editor in nvim vim vi nano; do
        if command -v "${editor}" >/dev/null; then
                alias v="${editor}"
                alias vi="${editor}"
                alias vim="${editor}"
                break;
        fi
done

alias vb="${EDITOR} ${HOME}/.bashrc"
alias vp="${EDITOR} ${HOME}/.profile"
alias vv="${EDITOR} ${HOME}/.vimrc"
alias va="${EDITOR} ${HOME}/.aliasrc"
alias vs="${EDITOR} ${XDG_CONFIG_HOME}/sxhkd/sxhkdrc"
alias vx="${EDITOR} ${HOME}/.Xresources"
alias vwm="${EDITOR} ${XDG_CONFIG_HOME}/bspwm/bspwmrc"
alias vpb="${EDITOR} ${XDG_CONFIG_HOME}/polybar/config"

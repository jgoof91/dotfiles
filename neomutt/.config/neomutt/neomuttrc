set mbox_type = maildir
set header_cache = ~/.cache/mutt/headers
set message_cachedir = ~/.cache/mutt/messages
set mail_check = 120
set index_format = "%4C %Z %{%b %D} (%4c) %-25.25L %?X?ï£¡? %s"
auto_view text/html
alternative_order text/plain text/enriched text/html

#sidebar
set sidebar_visible =  yes
set sidebar_width = 20
set sidebar_short_path = yes
set sidebar_component_depth = 0
set sidebar_delim_chars = '/.'
set sidebar_folder_indent = yes
set sidebar_indent_string = " | "
set sidebar_new_mail_only = no
set sidebar_non_empty_mailbox_only = yes
set sidebar_next_new_wrap = no
set sidebar_divider_char = '|'
set mail_check_stats
set sidebar_sort_method = 'new'

#sidebar bind
bind index,pager \Ck sidebar-prev
bind index,pager \Cj sidebar-next
bind index,pager \Cl sidebar-open
bind index,pager \Co sidebar-toggle-visible

#keybinding
bind index g noop
bind index gg first-entry
bind index G last-entry
bind index,pager,attach h exit
bind index l display-message
bind index L limit
bind browser h goto-parent
bind browser l select-entry
bind pager,browser gg top-page
bind pager,browser G bottom-page
bind index,pager,browser d half-down
bind index,pager,browser u half-up

#folder hook
folder-hook . "set sort=reverse-date-sent"

#sources
#account
source ~/.config/neomutt/account.neomuttrc
